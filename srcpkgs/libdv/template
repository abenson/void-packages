# Template file for 'libdv'
pkgname=libdv
version=1.0.0
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="libXv-devel popt-devel"
short_desc="Software codec for DV video"
maintainer="Andrew Benson <abenson+void@gmail.com>"
license="LGPL-2.1-or-later"
homepage="http://libdv.sourceforge.net/"
distfiles="${SOURCEFORGE_SITE}/project/libdv/libdv/${version}/libdv-${version}.tar.gz"
checksum=a305734033a9c25541a59e8dd1c254409953269ea7c710c39e540bd8853389ba

libdv-devel_package() {
	short_desc+=" - development files"
	depends+=" ${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
