# Template file for 'finalcut'
pkgname=finalcut
version=0.8.0
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config m4 automake autoconf-archive libtool"
makedepends="gpm-devel ncurses-devel"
short_desc="Text-based widget toolkit"
maintainer="Andrew Benson <abenson+void@gmail.com>"
license="LGPL-3.0-or-later"
homepage="https://github.com/gansm/finalcut"
distfiles="${homepage}/archive/refs/tags/${version}.tar.gz"
checksum=0bb4de87df2c466d5ba6513cadcb691a3387e60884c65c7bd158e8350f7f4829

pre_configure() {
	./autogen.sh
}

finalcut-devel_package() {
	short_descr+=" - development files"
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/share/doc
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
