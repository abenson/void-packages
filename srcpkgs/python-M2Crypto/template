post_install() {
	vlicense LICENCE
}

python3-M2Crypto_package() {
	pycompile_module="M2Crypto"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENCE
	}
}
